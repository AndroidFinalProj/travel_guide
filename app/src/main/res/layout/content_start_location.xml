<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Selectcity_txt"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#86195A"
        android:text="Select Your City"
        android:textColor="#fff"
        android:paddingTop="30dp"
        android:textAlignment="center"
        />
    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="60pt"
        android:id="@+id/autocomplete"
        android:textColor="#86195A"
        android:paddingLeft="45dp"
        android:paddingBottom="0dp"
        android:layout_alignRight="@+id/Selectcity_txt"
        android:hint="Type in your Location"/>
        <!--android:background="@drawable/favorites_active"-->
</LinearLayout>
